{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "removeComments": true,
        "lib": ["ES2015", "DOM"],
        "baseUrl": ".",
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}